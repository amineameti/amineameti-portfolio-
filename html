      <div id="modalTitle" class="title"></div>
      <div class="content" id="modalContent"></div>
    </div>
  </div>

  <!-- Image modal for certificates / big photos -->
  <div id="imgOverlay" class="overlay" aria-hidden="true">
    <div class="modal" style="max-width:90%;width:960px;">
      <button class="close" id="imgClose">close</button>
      <div class="title" id="imgTitle"></div>
      <div class="content" id="imgContent" style="display:flex;justify-content:center;align-items:center;padding:10px">
        <img id="imgViewer" src="" alt="certificate / photo" style="max-width:100%;max-height:70vh;border-radius:10px;box-shadow:0 10px 40px rgba(0,0,0,0.3)"/>
      </div>
