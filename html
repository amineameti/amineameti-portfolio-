  <script>
    // Provided content from the user
    const aboutText = `My name is Amine, born in May 2004 in Tetovo, Macedonia, and raised in Ilijaš near Sarajevo, where I finished both middle and high school. I speak three languages — Bosnian (strongest), Albanian, and English.\n\nMy biggest passion is photography — capturing and editing moments that tell a story. In the Gallery section, you can explore a collection of my photos, all taken and edited by me. I also enjoy design, having created logos and catalogs for my father’s business, which are also showcased in the Gallery.\n\nAlongside my creative work, I hold certificates in QA Manual Testing, QA Animation Testing, and Web Development. I’m also familiar with UX/UI design. In fact, this website itself is a project I fully designed and developed.\n\nI’m passionate about combining creativity with technical skills — whether through design, development, or photography — to build meaningful and visually engaging projects.`;

    const courses = [
      {year:'2019 - 2022',title:"High School - SŠC 'Nedžad Ibrišimović', Ilijaš", img:null},
      {year:'2023',title:'Course - QA Manuel', img:'certifikati/qamanual1.jpg'},
      {year:'2024',title:'Course - QA animation', img:'certifikati/qaanimation1.jpg'},
      {year:'2024',title:'Course - Web development', img:'certifikati/webdev1.jpg'}
    ];

    const languages = [
      {name:'Bosnian',pct:100},
      {name:'Albanian',pct:60},
      {name:'English',pct:70}
    ];

    // Utilities
    const overlay = document.getElementById('overlay');
    const modalTitle = document.getElementById('modalTitle');
    const modalContent = document.getElementById('modalContent');
    const modalClose = document.getElementById('modalClose');

    const imgOverlay = document.getElementById('imgOverlay');
    const imgClose = document.getElementById('imgClose');
    const imgViewer = document.getElementById('imgViewer');
    const imgTitle = document.getElementById('imgTitle');

    function openModal(title,html){
      modalTitle.textContent = title;
      modalContent.innerHTML = html;
      overlay.classList.add('show');
      overlay.setAttribute('aria-hidden','false');
    }
    function closeModal(){overlay.classList.remove('show'); overlay.setAttribute('aria-hidden','true');}
    modalClose.addEventListener('click', closeModal);
    overlay.addEventListener('click',(e)=>{ if(e.target===overlay) closeModal(); });

    function openImageModal(title,src){
      imgTitle.textContent = title;
      imgViewer.src = src;
      imgOverlay.classList.add('show');
      imgOverlay.setAttribute('aria-hidden','false');
    }
    function closeImageModal(){ imgOverlay.classList.remove('show'); imgOverlay.setAttribute('aria-hidden','true'); imgViewer.src=''; }
    imgClose.addEventListener('click', closeImageModal);
    imgOverlay.addEventListener('click',(e)=>{ if(e.target===imgOverlay) closeImageModal(); });

    // Buttons
    document.querySelectorAll('[data-open]').forEach(btn=>btn.addEventListener('click',()=>{
      const which = btn.getAttribute('data-open');
      if(which==='about'){
        openModal('About Me', '<p style="white-space:pre-line;line-height:1.6">'+escapeHtml(aboutText)+'</p>');
      } else if(which==='courses'){
        let html = '<div style="display:flex;flex-direction:column;gap:12px">';
        courses.forEach(c=>{
          html += `<div class="cert-row"><div><strong>${c.year}</strong> &nbsp; ${escapeHtml(c.title)}</div>`;
          if(c.img){ html += `<button class="view-btn" data-cert="${c.img}">VIEW</button>` }
          html += '</div>'
        });
        html += '</div>';
        openModal('School / Courses', html);

        // attach handlers for VIEW after modal shown
        setTimeout(()=>{
          document.querySelectorAll('.view-btn').forEach(b=>b.addEventListener('click',()=>{
            const src = b.getAttribute('data-cert');
            openImageModal('Certificate', src);
          }));
        },50);

      } else if(which==='languages'){
        let html = '<div class="lang">';
        languages.forEach(l=>{
          html += `<div style="display:flex;justify-content:space-between;align-items:center;font-weight:700">${escapeHtml(l.name)} <span>${l.pct}%</span></div>`;
          html += `<div class="bar"><div class="fill" style="width:${l.pct}%"></div></div>`;
        });
        html += '</div>';
        openModal('Languages', html);
      } else if(which==='gallery'){
        // gallery main modal with folders
        const html = `<div style="display:flex;flex-direction:column;gap:12px">`+
          `<div class="folder" style="justify-content:space-between"><div>Photography.</div><button class="btn" data-folder="photography">Open</button></div>`+
          `<div class="folder" style="justify-content:space-between"><div>Logos and Catalog.</div><button class="btn" data-folder="logos_catalog">Open</button></div>`+
          `</div>`;
        openModal('My Gallery', html);
        setTimeout(()=>{ document.querySelectorAll('[data-folder]').forEach(b=>b.addEventListener('click',openFolderFromBtn)); },50);
      } else if(which==='contact'){
        openModal('Contact Me', `<div><strong>For any business:</strong><p style="margin:8px 0"><a href=\"mailto:amine.ameti@yahoo.com\">amine.ameti@yahoo.com</a></p></div>`);
      }
    }));

    // folder openers from side or modal
    function openFolderFromBtn(e){
      const folder = e.currentTarget.getAttribute('data-folder');
      openFolder(folder);
    }
    document.querySelectorAll('[data-folder]').forEach(b=>b.addEventListener('click',openFolderFromBtn));

    // Replace with a small routine that attempts to load images from a folder by convention.
    // Because JS cannot list local filesystem folders when run from file://, this implementation expects you to prepare a small JSON manifest if you run locally in a strict browser environment. For convenience, the script will try to load a set of common filenames. If you're hosting on a static server, create the folder structure and images and the thumbnails will work.
    const commonPhotoNames = [
      '1.jpg','2.jpg','3.jpg','4.jpg','5.jpg','6.jpg','7.jpg','8.jpg','9.jpg','10.jpg'
    ];

    function openFolder(folder){
      // Build grid HTML
      let html = `<div style=\"display:flex;flex-direction:column;gap:12px\"><div style=\"font-weight:800;margin-bottom:6px\">${folder.replace('_',' ')} </div><div class=\"grid\" id=\"grid_${folder}\">`;
      commonPhotoNames.forEach(n=>{ html += `<img class=\"thumb\" data-src=\"gallery/${folder}/${n}\" src=\"gallery/${folder}/${n}\" alt=\"${folder} ${n}\" onerror=\"this.style.display='none'\">`; });
      html += '</div></div>';
      openModal(folder==='photography' ? 'Photography.' : 'Logos and Catalog.', html);

      // attach click handler to open image bigger
      setTimeout(()=>{
        document.querySelectorAll(`#grid_${folder} .thumb`).forEach(img=>{
          img.addEventListener('click',()=>{
            openImageModal('', img.getAttribute('data-src'));
          });
        });
      },80);
    }

    // small helper to escape HTML
    function escapeHtml(str){ return str.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/\"/g,'&quot;').replace(/\'/g,'&#039;'); }

    // Accessibility: close modals with ESC
    document.addEventListener('keydown',(e)=>{
      if(e.key==='Escape'){
        closeModal(); closeImageModal();
      }
    });

    // If you want to programmatically open the About on load, uncomment below
    // openModal('About Me','<p>'+escapeHtml(aboutText)+'</p>');
  </script>
</body>
